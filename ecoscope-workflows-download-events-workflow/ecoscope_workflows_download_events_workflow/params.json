          "title": "Min Latitude",
          "type": "number"
        },
        "max_y": {
          "default": 90.0,
          "ecoscope:advanced": true,
          "title": "Max Latitude",
          "type": "number"
        },
        "min_x": {
          "default": -180.0,
          "ecoscope:advanced": true,
          "title": "Min Longitude",
          "type": "number"
        },
        "max_x": {
          "default": 180.0,
          "ecoscope:advanced": true,
          "title": "Max Longitude",
          "type": "number"
        }
      },
      "title": "BoundingBox",
      "type": "object"
    },
    "Coordinate": {
      "properties": {
        "y": {
          "description": "Example -0.15293",
          "title": "Latitude",
          "type": "number"
        },
        "x": {
          "description": "Example 37.30906",
          "title": "Longitude",
          "type": "number"
        }
      },
      "required": [
        "y",
        "x"
      ],
      "title": "Coordinate",
      "type": "object"
